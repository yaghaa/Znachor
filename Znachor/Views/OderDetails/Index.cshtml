@model Znachor.ViewModels.OrderDetailsViewModel
@{
    ViewBag.Title = "Płatność";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Podsumowanie zamówienia</h2>

<div class="col-md-12"> Produkty:</div>
<div class="col-md-12">
    <div class="col-md-8"> Nazwa</div>
    <div class="col-md-2"> Ilość</div>
    <div class="col-md-2"> Cena</div>
</div>
@foreach (var product in Model.OrderedProducts)
{
    <div class="col-md-12">
        <div class="col-md-8"> @product.Nazwa</div>
        <div class="col-md-2"> @product.Ilosc_sztuk</div>
        <div class="col-md-2"> @product.Cena</div>
    </div>
}
<div align="right"class="col-md-12">Suma: @Model.Amount</div>
<h2>Dane Kupującego:</h2>
<div class="col-md-12">
    <div class="col-md-3" align="right">Imię:</div>
    @Html.DisplayFor(x => x.FirstName, new {@class = "col-md-4"})
</div>


<div class="col-md-12">
    <div class="col-md-3" align="right">Nazwisko:</div>
    @Html.DisplayFor(x => x.Surname, new {@class = "col-md-4"})
</div>


<div class="col-md-12">
    <div class="col-md-3" align="right">Ulica:</div>
    @Html.DisplayFor(x => x.Street, new {@class = "col-md-4"})
</div>

<div class="col-md-12">
    <div class="col-md-3" align="right">Kod pocztowy:</div>
    @Html.DisplayFor(x => x.PostalCode, new {@class = "col-md-4"})
</div>


<div class="col-md-12">
    <div class="col-md-3" align="right">Miasto:</div>
    @Html.DisplayFor(x => x.City, new {@class = "col-md-4"})
</div>

<div class="col-md-12">
    <div class="col-md-3" align="right">Dostawa:</div>
    @Html.DisplayFor(x => x.Shipment, new {@class = "col-md-4"})
</div>


<div class="col-md-12">
    <div class="col-md-3" align="right">Płatność:</div>
    @Html.DisplayFor(x => x.Payment, new {@class = "col-md-4"})
</div>